@model IEnumerable<ProyTE.UI.Models.TbTarjetas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MenuSistema.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Tarjeta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_TipoTarjeta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreTarjeta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumTarjeta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Tarjeta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_TipoTarjeta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreTarjeta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumTarjeta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVencimiento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Tarjeta }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Tarjeta }) |
            @Html.ActionLink("Eliminar", "Delete",
                new { confirm = true, id = item.Id_Tarjeta },
                new { onclick = "return confirm('¿Esta seguro de eliminar la tarjeta?')" })
        </td>
    </tr>
}

</table>
